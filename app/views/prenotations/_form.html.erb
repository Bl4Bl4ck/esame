<%= form_with(model: prenotation, class: "contents") do |form| %>
  <% if prenotation.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(prenotation.errors.count, "error") %> prohibited this prenotation from being saved:</h2>

      <ul class="list-disc ml-6">
        <% prenotation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": prenotation.errors[:nome].none?, "border-red-400 focus:outline-red-600": prenotation.errors[:nome].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :cognome %>
    <%= form.text_field :cognome, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": prenotation.errors[:cognome].none?, "border-red-400 focus:outline-red-600": prenotation.errors[:cognome].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :partenza %>
    <%= form.date_field :partenza, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": prenotation.errors[:partenza].none?, "border-red-400 focus:outline-red-600": prenotation.errors[:partenza].any?}] %>
  </div>
<div class="my-5 flex items-center gap-2">
  <%= form.label :persone %>
  <%= form.number_field :persone, class: ["block shadow-sm rounded-md border w-full", {"border-gray-400 focus:outline-blue-600": prenotation.errors[:persone].none?, "border-red-400 focus:outline-red-600": prenotation.errors[:persone].any?}] %>
</div>
  <div class="my-5 flex items-center gap-2">

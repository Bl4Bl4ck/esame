    <%= form.label :colombia %>
    <%= form.checkbox :colombia, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": prenotation.errors[:colombia].none?, "border-red-400 focus:outline-red-600": prenotation.errors[:colombia].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :cile %>
    <%= form.checkbox :cile, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": prenotation.errors[:cile].none?, "border-red-400 focus:outline-red-600": prenotation.errors[:cile].any?}] %>
